{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": false,
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "strict": true,
    "esModuleInterop": true,
    "lib": ["es2020"],
    "declaration": true,
    "declarationMap": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true,
    "baseUrl": ".",
    "removeComments": false,
    "pretty": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["./node_modules"]
}
